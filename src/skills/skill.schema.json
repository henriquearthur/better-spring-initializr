{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://better-spring-initializr.dev/schemas/skill.schema.json",
  "title": "Better Spring Initializr AI Skill",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "label",
    "description",
    "directoryName",
    "sortOrder"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "minLength": 1
    },
    "id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^skill-[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "label": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "directoryName": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "sortOrder": {
      "type": "integer",
      "minimum": 0
    }
  }
}
